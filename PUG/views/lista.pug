doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous") 
        title PUG
    body
        .div-btn 
            button(onclick="window.location.href='/'", class="btn btn-secondary") Cargar producto
        table.table
            thead
                tr
                    th
                        | Nombre
                    th
                        | Precio
                    th
                        | Thumbnail
            tbody
                each dato in datos
                    tr
                        td
                            | #{dato.name}
                        td
                            | #{dato.price}
                        td
                            img(src=dato.thumbnail , alt="thumbnail")
    style.
        body {
            background-color: #846B8A;
        }
        .btn {
            margin-top: 20px;
            background-color: #CFA5B4;
            border: none;
            color: #f5f5f5;
            font-weight: bold;
        }
        .div-btn {
            margin: 0 auto;
            padding-top: 25px;
            padding-bottom: 25px;
            width: 10%;
        }
        .table {
            margin: 0 auto;
            padding-top: 25px;
            width: 50%;
            color: #F7D4BC;
        }
        th {
            color:#F7D4BC;
            font-weight: bold;
        }
        td {
            color: #f5f5f5;
        }
        img {
            width: 100px;
        }

