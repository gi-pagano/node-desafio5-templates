doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous") 
        title PUG
    body
        form(action="/productos" method="post")
            div.form-group
                label(for="name") Producto: 
                input.form-control(type="text", name="name", placeholder="Producto")
                br
                label(for="price") Precio: 
                input.form-control(type="text", name="price", placeholder="Precio")
                br
                label(for="thumbnail") Thumbnail: 
                input.form-control(type="text", name="thumbnail", placeholder="Thumbnail")
                br
                input.form-control(type="submit", value="Enviar", class="btn btn-secondary")
        .div-btn 
            button(onclick="window.location.href='/productos'", class="btn btn-secondary") Ver productos
    style.
        body {
            background-color: #846B8A;
        }
        form {
            margin: 0 auto;
            padding-top: 25px;
            width: 50%;
        }
        label {
            color:#F7D4BC;
            font-weight: bold;
            padding-top: 3px;
        }
        .btn {
            margin-top: 20px;
            background-color: #CFA5B4;
            border: none;
            color: #f5f5f5;
            font-weight: bold;
        }
        .div-btn {
            margin: 0 auto;
            padding-top: 25px;
            padding-bottom: 25px;
            width: 10%;
        }

